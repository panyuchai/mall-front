.goods-list {
  padding: 0 30rpx;
}
.goods-list .goods {
    margin: 20rpx 0;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
        -ms-flex-pack: justify;
            justify-content: space-between;
    overflow: hidden;
}
.goods-list .goods .img image {
      width: 236rpx;
      height: 236rpx;
      vertical-align: top;
}
.goods-list .goods .info {
      overflow: hidden;
      margin-left: 20rpx;
      width: calc(100% - 256rpx);
}
.goods-list .goods .info .tit {
        font-size: 32rpx;
        color: #333333;
        white-space: nowrap;
        overflow: hidden;
        -o-text-overflow: ellipsis;
           text-overflow: ellipsis;
        line-height: 55rpx;
}
.goods-list .goods .info .desc {
        font-size: 24rpx;
        color: #747474;
        line-height: 36rpx;
        white-space: nowrap;
        overflow: hidden;
        -o-text-overflow: ellipsis;
           text-overflow: ellipsis;
}
.goods-list .goods .info .saleNum {
        margin-top: 10rpx;
        font-size: 24rpx;
        color: #E51700;
        background: #FEEEEE;
        display: inline-block;
        max-width: 100%;
        overflow: hidden;
        padding: 0 5rpx;
}
.goods-list .goods .info .sale {
        margin-top: 18rpx;
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-pack: justify;
        -webkit-justify-content: space-between;
            -ms-flex-pack: justify;
                justify-content: space-between;
        -webkit-box-align: end;
        -webkit-align-items: flex-end;
            -ms-flex-align: end;
                align-items: flex-end;
}
.goods-list .goods .info .sale .sale-points {
          color: #E51700;
          font-size: 24rpx;
}
.goods-list .goods .info .sale .sale-points .points {
            font-size: 40rpx;
}
.goods-list .goods .info .sale .sale-action .sale-btn {
          width: 176rpx;
          height: 68rpx;
          display: -webkit-box;
          display: -webkit-flex;
          display: -ms-flexbox;
          display: flex;
          -webkit-box-pack: center;
          -webkit-justify-content: center;
              -ms-flex-pack: center;
                  justify-content: center;
          -webkit-box-align: center;
          -webkit-align-items: center;
              -ms-flex-align: center;
                  align-items: center;
          background: #E51700;
          color: #fff;
          font-size: 24rpx;
