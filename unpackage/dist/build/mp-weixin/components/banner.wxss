.swiper-box {
  position: relative;
}
.swiper-box .swiper {
    height: 260rpx;
}
.swiper-box .swiper .swiper-item {
      width: 100%;
      height: 100%;
}
.swiper-box .swiper .swiper-item .img {
        width: 100%;
}
.swiper-box .indicator {
    position: absolute;
    bottom: 28rpx;
    left: 50%;
    -webkit-transform: translateX(-50%);
        -ms-transform: translateX(-50%);
            transform: translateX(-50%);
}
.swiper-box .indicator .dots {
      float: left;
      width: 12rpx;
      height: 12rpx;
      background: rgba(250, 250, 250, 0.4);
      border-radius: 50%;
      margin: 0 6rpx;
}
.swiper-box .indicator .dots.on {
        background: #fafafa;
}

