      display: inline-block;
      text-align: center;
      height: 50rpx;
      line-height: 50rpx;
      margin-top: 2px;
      margin-bottom: 3px;
      border-radius: 4px;
}
.search-classify .classify-bottom .active {
      background-color: #E22018;
      color: #fff;
