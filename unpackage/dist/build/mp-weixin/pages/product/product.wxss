.search-classify .classify-top .item {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
          -ms-flex: 1;
              flex: 1;
      color: #080808;
      font-size: 24rpx;
      text-align: center;
      height: 60rpx;
}
.search-classify .classify-top .item .item-icon {
        display: inline-block;
        width: 16px;
        position: relative;
}
