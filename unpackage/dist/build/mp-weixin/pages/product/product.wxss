    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    -webkit-box-shadow: 2px 3px 5px rgba(0, 0, 0, 0.1);
            box-shadow: 2px 3px 5px rgba(0, 0, 0, 0.1);
