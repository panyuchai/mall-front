<view class="goods-list"><block wx:for="{{options.list}}" wx:for-item="good" wx:for-index="index" wx:key="index"><block wx:if="{{good.shelf}}"><view data-event-opts="{{[['tap',[['linkToDetail',['$0'],[[['options.list','',index,'goodsId']]]]]]]}}" class="goods" bindtap="__e"><view class="img"><image src="{{good.goodsImg}}" mode="aspectFit"></image></view><view class="info"><view class="tit">{{''+good.goodsTitle+''}}</view><view class="desc">{{''+good.goodsSubTitle+''}}</view><view class="saleNum"></view><view class="sale"><view class="sale-points"><block wx:if="{{good.goodsPrice}}"><view class="saleMoney"><text class="money">{{good.goodsPrice}}</text>元</view></block><block wx:if="{{good.goodsPrice&&good.goodsPoint}}"><view class="and">+</view></block><block wx:if="{{good.goodsPoint}}"><view class="salePoints"><text class="points">{{good.goodsPoint}}</text>分</view></block></view><view class="sale-action"><view class="sale-btn">立即订购</view></view></view></view></view></block></block></view>