<view class="recommend-list"><view class="hd"><view class="cell-tit">商品推荐</view><view data-event-opts="{{[['tap',[['linkToMore',['$event']]]]]}}" class="cell-more" bindtap="__e">查看更多<text class="icon-arrow iconfont icon-arrowRight"></text></view></view><view class="bd"><block wx:for="{{options.list}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block wx:if="{{item.shelf}}"><view data-event-opts="{{[['tap',[['linkToDetail',['$0'],[[['options.list','',index,'goodsId']]]]]]]}}" class="pro-item" bindtap="__e"><image class="pro-img" src="{{item.goodsImg}}" mode="widthFix"></image><view class="pro-content"><view class="pro-tit">{{item.goodsTitle}}</view><view><view class="pro-subtit">{{''+item.goodsSubTitle+''}}</view><view class="pro-price"><block wx:if="{{item.goodsPrice}}"><view class="sale-price"><text class="money">{{item.goodsPrice}}</text>元</view></block><block wx:if="{{item.goodsPrice&&item.goodsPoint}}"><view class="and">+</view></block><block wx:if="{{item.goodsPoint}}"><view class="sale-points"><text class="points">{{item.goodsPoint}}</text>分</view></block></view></view></view></view></block></block></view></view>