<view><search class="search-bar" vue-id="1" bind:__l="__l"></search><view class="search-classify"><view class="classify-top"><view data-event-opts="{{[['tap',[['doSearch',[0]]]]]}}" class="{{['item',searchData.orderType==0?'red':'gray']}}" bindtap="__e">综合</view><view data-event-opts="{{[['tap',[['doSearch',[1]]]]]}}" class="{{['item',searchData.orderType==1?'red':'gray']}}" bindtap="__e">最新</view><view data-event-opts="{{[['tap',[['doSearch',[2]]]]]}}" class="item" bindtap="__e">价格<text class="item-icon"><text class="{{['iconfont icon-icon_sanjiaoxing icon-top',searchData.orderType==2&&searchData.isDesc?'red':'gray']}}"></text><text class="{{['iconfont icon-icon_sanjiaoxing icon-bottom',searchData.orderType==2&&!searchData.isDesc?'red':'gray']}}"></text></text></view><view data-event-opts="{{[['tap',[['doSearch',[3]]]]]}}" class="{{['item',searchData.orderType==3?'red':'gray']}}" bindtap="__e">销量<text class="item-icon"><text class="iconfont icon-icon_sanjiaoxing icon-top"></text><text class="iconfont icon-icon_sanjiaoxing icon-bottom"></text></text></view></view></view><block wx:if="{{notFound}}"><view><view class="not-tips">没有找到相关搜索结果</view></view></block><view><block wx:if="{{hasLogin}}"><view><view class="product-list"><block wx:for="{{productList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['linkToDetail',['$event']]]]]}}" class="pro-item" bindtap="__e"><image class="pro-img" src="{{item.img}}" mode="widthFix"></image><view class="pro-content"><view class="pro-tit">{{item.name}}</view><view><view class="pro-subtit">{{''+item.subname+''}}</view><view class="pro-price"><text class="sale-price"><text class="unit">￥</text>{{item.sale}}</text></view></view></view><block wx:if="{{item.tag}}"><view class="tag">{{''+item.tag+''}}</view></block></view></block></view><tui-loadmore vue-id="2" visible="{{loadding}}" index="{{3}}" type="primary" bind:__l="__l"></tui-loadmore><tui-nomore vue-id="3" visible="{{!pullUpOn}}" bind: