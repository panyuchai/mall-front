<view class="content"><view class="row"><view class="tit">收货人</view><input class="input" type="text" placeholder="收货人姓名" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','name','$event',[]],['addressData']]]]]}}" value="{{addressData.name}}" bindinput="__e"/></view><view class="row"><view class="tit">手机号码</view><input class="input" type="number" placeholder="收货人手机号码" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','mobile','$event',[]],['addressData']]]]]}}" value="{{addressData.mobile}}" bindinput="__e"/></view><view class="row"><view class="tit">收货地址</view><view data-event-opts="{{[['tap',[['chooseLocation',['$event']]]]]}}" class="input" bindtap="__e">{{''+addressData.address+''}}</view></view><view class="row"><view class="tit">详细地址</view><input class="input" type="text" placeholder="请输入详细地址" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','area','$event',[]],['addressData']]]]]}}" value="{{addressData.area}}" bindinput="__e"/></view><button data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="add-btn" bindtap="__e">确定</button></view>