    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    -webkit-justify-content: space-around;
        -ms-flex-pack: distribute;
            justify-content: space-around;
    border-radius: 8rpx;
    font-size: 32rpx;
    color: #ffffff;
}
.borderB-none:after {
  content: "";
  height: 0 !important;
}

